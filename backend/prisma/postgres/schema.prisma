generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String          @id @default(uuid())
  email            String          @unique
  password         String
  fullName         String
  role             Role            @default(STUDENT)
  isVerified       Boolean         @default(false)
  twoFactorEnabled Boolean         @default(false)
  googleId         String?         @unique
  githubId         String?         @unique
  otp              String?
  otpExpiry        DateTime?
  avatar           String?
  bio              String?
  location         String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  livestreams      LiveStream[]
  studentProfile   StudentProfile?
  teacherProfile   TeacherProfile?

  @@map("users")
}

model TeacherProfile {
  id            String            @id @default(uuid())
  userId        String            @unique
  cvUrl         String?
  subjects      String[]
  experience    Int?
  education     String?
  totalStudents Int               @default(0)
  rating        Float             @default(0)
  website       String?
  linkedin      String?
  youtube       String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  followers     FollowedTeacher[]
  user          User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("teacher_profiles")
}

model StudentProfile {
  id                     String            @id @default(uuid())
  userId                 String            @unique
  grade                  String?
  school                 String?
  interests              String[]
  studyHours             Int               @default(0)
  studyStreak            Int               @default(0)
  learningGoals          String[]
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  followedTeachers       FollowedTeacher[]
  receivedFriendRequests FriendList[]      @relation("ReceivedFriendRequests")
  sentFriendRequests     FriendList[]      @relation("SentFriendRequests")
  user                   User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("student_profiles")
}

model FriendList {
  id         String         @id @default(uuid())
  requestId  String
  receiverId String
  status     FriendStatus   @default(PENDING)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
  receiver   StudentProfile @relation("ReceivedFriendRequests", fields: [receiverId], references: [id], onDelete: Cascade)
  requester  StudentProfile @relation("SentFriendRequests", fields: [requestId], references: [id], onDelete: Cascade)

  @@unique([requestId, receiverId])
  @@index([requestId, status])
  @@index([receiverId, status])
  @@index([status])
  @@map("friend_lists")
}

model FollowedTeacher {
  id        String         @id @default(uuid())
  studentId String
  teacherId String
  createdAt DateTime       @default(now())
  student   StudentProfile @relation(fields: [studentId], references: [id], onDelete: Cascade)
  teacher   TeacherProfile @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([studentId, teacherId])
  @@map("followed_teachers")
}

model LiveStream {
  id             String           @id @default(uuid())
  teacherId      String
  title          String
  description    String?
  thumbnail      String?
  status         LiveStreamStatus @default(SCHEDULED)
  recordingUrl   String?
  scheduledAt    DateTime?
  startedAt      DateTime?
  endedAt        DateTime?
  currentViewers Int              @default(0)
  totalViews     Int              @default(0)
  peakViewers    Int              @default(0)
  duration       Int              @default(0)
  isRecorded     Boolean          @default(true)
  isPublic       Boolean          @default(true)
  allowComments  Boolean          @default(true)
  allowQuestions Boolean          @default(true)
  maxViewers     Int?
  chatMode       ChatMode         @default(EVERYONE)
  analyticsId    String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  category       String?
  users          User             @relation(fields: [teacherId], references: [id])
  tags           Tag[]

  @@index([teacherId, status])
  @@index([scheduledAt])
  @@index([status])
  @@map("livestreams")
}

model Document {
  id          String   @id @default(uuid())
  title       String
  description String?
  fileUrl     String
  fileType    String
  fileSize    Int
  mimeType    String
  uploadedAt  DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fileName    String
  teacherId   String
  thumbnail   String?

  @@index([fileType])
  @@index([teacherId])
  @@map("documents")
}

model Tag {
  id           String     @id @default(uuid())
  name         String     @unique
  slug         String     @unique
  description  String?
  color        String?
  livestreamId String
  createdAt    DateTime   @default(now())
  livestream   LiveStream @relation(fields: [livestreamId], references: [id], onDelete: Cascade)

  @@index([slug])
  @@map("tags")
}

model Schedule {
  id           String       @id @default(uuid())
  teacherId    String
  title        String
  description  String?
  type         ScheduleType
  startTime    DateTime
  endTime      DateTime
  isRecurring  Boolean      @default(false)
  recurrence   String?
  livestreamId String?
  notifyBefore Int          @default(15)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([teacherId, startTime])
  @@index([type])
  @@map("schedules")
}

model PendingRegistration {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  role      Role     @default(STUDENT)
  otp       String
  otpExpiry DateTime
  createdAt DateTime @default(now())

  @@map("pending_registrations")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("sessions")
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
  BLOCKED
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum LiveStreamStatus {
  SCHEDULED
  LIVE
  ENDED
  CANCELLED
}

enum ChatMode {
  EVERYONE
  SUBSCRIBERS_ONLY
  DISABLED
}

enum ScheduleType {
  LIVESTREAM
  MEETING
  OFFICE_HOURS
  OTHER
}

enum SubscriptionTier {
  FREE
  BASIC
  PREMIUM
  VIP
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PAUSED
}

enum ReportType {
  USER
  LIVESTREAM
  COMMENT
  MESSAGE
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWING
  RESOLVED
  DISMISSED
}
